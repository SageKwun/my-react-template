{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "strict": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "forceConsistentCasingInFileNames": false,
    "noImplicitAny": true,
    "module": "es6",
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
